@{
    ViewBag.Title = "Home Page";
}   
<div class="row">
    <div class="col-md-12">

        <div style="text-align: left; padding-top:10px; padding-bottom: 10px;">
            <button id="btnCreateNewContact" name="btnCreateNewContact" class="btn btn-primary">Create New Contact</button>
        </div>

        <!-- #region Contact List Datagrid, table data is populated from Ajax call to API -->
        <table class="table table-bordered" style="width:100%" id="ContactList_DataTable">
            <thead>
                <tr role="row">
                    <th width="1%">ContactID</th> <!-- Invisible column, placeholder only -->
                    <th width="15%">Name (Job Title)</th>
                    <th width="20%">Company</th>
                    <th width="15%">Phone</th>
                    <th width="25%">Address</th>
                    <th width="10%">Email</th>
                    <th width="14%">Last Date Updated</th>
                </tr>
            </thead>
        </table>
        <!-- #endregion -->
    </div>
</div>

@section Scripts{

    @Scripts.Render("~/bundles/home")

}
